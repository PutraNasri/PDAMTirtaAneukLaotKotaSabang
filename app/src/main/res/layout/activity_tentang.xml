<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tentang"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.byonge.pdamtirtaaneuklaotkotasabang.tentang">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FF3F51B4"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:text="PDAM Tirta Aneuk Laot Kota Sabang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/textView6"
                android:textStyle="normal|bold"
                android:textSize="18sp"
                android:textColor="#ffffff" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/relativeLayout"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_height="100dp">

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:background="?attr/colorPrimary"
                android:theme="?attr/actionBarTheme"
                android:minHeight="?attr/actionBarSize"
                android:id="@+id/toolbar"
                android:layout_height="100dp" />

            <android.support.v7.widget.GridLayout
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/news"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:onClick="berita" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/iconabout"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:onClick="pelanggan" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_marginRight="40dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/keluhan"
                    android:onClick="keluhan" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:background="@drawable/tentang"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

            </android.support.v7.widget.GridLayout>

            <RelativeLayout
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true">

            </RelativeLayout>

            <TextView
                android:text="TENTANG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="80dp"
                android:id="@+id/textView" />

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>